//FightCode can only understand your robot
//if its class is called Robot
var Robot = function(robot) {

};

Robot.prototype.onIdle = function(ev) {
    var robot = ev.robot;
  	robot.turn(10);
  	robot.move(10);
  	robot.turnGunRight(5);
   	robot.clone();
};

Robot.prototype.onScannedRobot = function(ev) {
    var robot = ev.robot;
   var scanned = ev.scannedRobot;
  	if(scanned.id == robot.parentId || scanned.parentId == robot.id)
  	{
  	}
  	else
  	{
  	  robot.fire();
      robot.turnGunLeft(15);
  	}
};

Robot.prototype.onWallCollision = function(ev) {
    var robot = ev.robot;
    robot.turn(ev.bearing  + 25);
   	robot.back(50);// turn enought to be in a straight
                            // angle with the wall.
};

Robot.prototype.onRobotCollision = function(ev) {
    var robot = ev.robot;
    robot.turn(20);
    robot.ahead(100); // trying to run away
};

Robot.prototype.onHitByBullet = function(ev) {
    var robot = ev.robot;
    robot.disappear(); // Turn to wherever the bullet was fired
                            // so we can see who shot it
};
